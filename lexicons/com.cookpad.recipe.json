{
  "lexicon": 1,
  "id": "com.cookpad.recipe",
  "defs": {
    "main": {
      "type": "record",
      "description": "Recipe record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["title", "ingredients", "steps"],
        "properties": {
          "title": {
            "type": "string",
            "maxLength": 300
          },
          "description": {
            "type": "string",
            "maxLength": 3000
          },

          "ingredients": {
            "type": "array",
            "description": "Ordered list of ingredient items and sections",
            "items": {
              "type": "ref",
              "ref": "#ingredientItem"
            }
          },

          "steps": {
            "type": "array",
            "items": {
              "type": "ref",
              "ref": "#step"
            }
          },

          "cookTimeMinutes": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10000
          },

          "servings": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100
          },

          "thumbnail": {
            "type": "blob",
            "accept": ["image/png", "image/jpeg", "image/webp"],
            "maxSize": 1000000
          },

          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 50
            },
            "maxLength": 20
          },

          "visibility": {
            "type": "string",
            "enum": ["draft", "published"],
            "default": "published"
          }
        }
      }
    },

    "ingredientItem": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ingredient", "section"]
        },
        "name": {
          "type": "string",
          "maxLength": 200
        },
        "title": {
          "type": "string",
          "maxLength": 200
        }
      }
    },

    "step": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {
          "type": "string",
          "maxLength": 1000
        },
        "image": {
          "type": "blob",
          "accept": ["image/png", "image/jpeg", "image/webp"],
          "maxSize": 1000000
        }
      }
    }
  }
}
